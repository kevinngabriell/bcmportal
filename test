function resolveValueFromItem(
  item: QuestionItem,
  row: Record<string, any>,
  suffix: string
): string | null {
  const cleanSuffix = suffix.trim();

  // ðŸŒ¶ SPECIAL CASE for Warden Box standard question
  if (item.label.includes("Warden Box memenuhi seluruh standar")) {
    switch (cleanSuffix) {
      case "0":
      case "2":
        return row["Berikut merupakan standar pemasangan warden box : 1. Warden Box dipasang ditempat yang mudah untuk dijangkau 2. Warden Box memiliki Hammer (Palu) 3. Isi Warden Box dimonitor sesuai ketentuan BC A..."] ?? null;
      case "3":
        return row["Berikut merupakan standar pemasangan warden box : 1. Warden Box dipasang ditempat yang mudah untuk dijangkau 2. Warden Box memiliki Hammer (Palu) 3. Isi Warden Box dimonitor sesuai ketentuan BC Ap..."] ?? null;
      case "4":
        return row["Berikut merupakan standar pemasangan warden box : 1. Warden Box dipasang ditempat yang mudah untuk dijangkau 2. Warden Box memiliki Hammer (Palu) 3. Isi Warden Box dimonitor sesuai ketentuan BC A...2"] ?? null;
      case "5":
        return row["Berikut merupakan standar pemasangan warden box : 1. Warden Box dipasang ditempat yang mudah untuk dijangkau 2. Warden Box memiliki Hammer (Palu) 3. Isi Warden Box dimonitor sesuai ketentuan BC A...3"] ?? null;
    }
  }

  // ðŸ§¼ General logic
  if (item.keyMapBySuffix?.[cleanSuffix]) {
    const actualKey = item.keyMapBySuffix[cleanSuffix];
    const val = row[actualKey];
    if (val !== undefined) return val;
  }

  if (item.keys) {
    return getValueByKeys(row, item.keys, cleanSuffix);
  }

  return null;
}