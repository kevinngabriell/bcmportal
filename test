function getValueByKeys(row: Record<string, any>, keys: string[], suffix: string): string | null {
  const allKeys = Object.keys(row);

  for (const pattern of keys) {
    const searchPattern = pattern.replace("${suffix}", suffix).toLowerCase();

    const matchedKey = allKeys.find((k) => k.toLowerCase().includes(searchPattern));
    if (matchedKey && row[matchedKey] !== undefined) {
      return row[matchedKey];
    }
  }

  return null;
}